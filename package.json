{
  "name": "@pfv6/elements",
  "version": "0.0.1",
  "description": "PatternFly Elements v6 - Web components implementing PatternFly v6 design system",
  "type": "module",
  "exports": {
    "./lib/*": "./lib/*",
    "./*": "./elements/*",
    "./package.json": "./package.json"
  },
  "scripts": {
    "deps:extract": "wireit",
    "deps:tasks": "wireit",
    "issues:sync": "npx tsx scripts/sync-github-issues.ts",
    "compile": "wireit",
    "compile:react-demos": "wireit",
    "copy:assets": "wireit",
    "copy:demos": "wireit",
    "e2e": "wireit",
    "e2e:parity": "wireit",
    "lint": "wireit",
    "cache": "wireit",
    "postinstall": "wireit",
    "start": "wireit",
    "test": "wireit"
  },
  "wireit": {
    "deps:extract": {
      "command": "npx tsx scripts/extract-dependencies.ts > dependencies.json",
      "description": "Extract component and demo dependencies from PatternFly React",
      "dependencies": [
        "cache"
      ],
      "files": [
        "scripts/extract-dependencies.ts",
        "scripts/lib/patternfly-utils.ts",
        ".cache/patternfly-react/**",
        "elements/pfv6-*/**"
      ],
      "output": [
        "dependencies.json"
      ]
    },
    "deps:tasks": {
      "command": "npx tsx scripts/generate-tasks.ts > tasks.json",
      "description": "Generate ordered task list for component conversion",
      "dependencies": [
        "deps:extract"
      ],
      "files": [
        "scripts/generate-tasks.ts",
        "scripts/lib/patternfly-utils.ts",
        "dependencies.json"
      ],
      "output": [
        "tasks.json"
      ]
    },
    "clean:cache": {
      "command": "rm -rf .cache",
      "files": [],
      "output": [
        "./.cache"
      ]
    },
    "clean:demos-source": {
      "command": "rm -rf patternfly-react && mkdir -p patternfly-react",
      "description": "Clean React demo source files (before copying from cache)"
    },
    "clean:plugins": {
      "command": "rm -f dev-server/plugins/*.js dev-server/plugins/*.js.map dev-server/plugins/*.d.ts dev-server/plugins/*.d.ts.map"
    },
    "clean:react-demos": {
      "command": "rm -rf patternfly-react/dist",
      "description": "Clean React demo build output"
    },
    "compile": {
      "dependencies": [
        "compile:tsc",
        "compile:cem",
        "compile:react-demos"
      ],
      "description": "Compile the project (TypeScript + CEM + React demos)"
    },
    "compile:cem": {
      "command": "if [ -d elements ] && [ \"$(find elements -name '*.ts' -not -name '*.spec.ts' 2>/dev/null)\" ]; then cem generate; else echo 'ℹ️  No elements found, skipping CEM generation'; fi",
      "description": "Generate Custom Elements Manifest with demo discovery",
      "dependencies": [
        "compile:tsc"
      ],
      "files": [
        "elements/**/*.ts",
        "elements/**/*.html",
        ".config/cem.yaml"
      ],
      "output": [
        "custom-elements.json"
      ]
    },
    "compile:react-demos": {
      "command": "vite build --config vite.config.react-demos.ts",
      "description": "Build React comparison demos with bundled PatternFly dependencies",
      "dependencies": [
        "clean:react-demos"
      ],
      "files": [
        "patternfly-react/**/*.tsx",
        "vite.config.react-demos.ts"
      ],
      "output": [
        "patternfly-react/dist/**"
      ]
    },
    "compile:tsc": {
      "command": "tsc",
      "description": "Compile TypeScript",
      "output": [
        "elements/**/*.js",
        "elements/**/*.js.map",
        "lib/**/*.js",
        "lib/**/*.js.map",
        "dev-server/**/*.js",
        "dev-server/**/*.js.map"
      ]
    },
    "copy:assets": {
      "command": "npx tsx scripts/copy-patternfly-assets.ts",
      "description": "Copy PatternFly base CSS, fonts, and images to dev-server",
      "files": [
        "scripts/copy-patternfly-assets.ts",
        "node_modules/@patternfly/react-core/dist/styles/base.css",
        "node_modules/@patternfly/patternfly/assets/fonts/**/*",
        "node_modules/@patternfly/react-styles/css/assets/images/**/*"
      ],
      "output": [
        "dev-server/styles/patternfly/base.css",
        "dev-server/styles/assets/fonts/**/*",
        "dev-server/assets/patternfly/assets/images/**/*"
      ]
    },
    "copy:demos": {
      "command": "npx tsx scripts/copy-patternfly-react-demos.ts",
      "files": [],
      "output": [
        "./patternfly-react/**"
      ],
      "dependencies": [
        "clean:demos-source",
        "cache"
      ]
    },
    "e2e": {
      "command": "playwright test",
      "description": "Run ALL E2E tests (Parity + CSS API)",
      "dependencies": [
        "compile:tsc",
        "compile:react-demos"
      ]
    },
    "e2e:parity": {
      "command": "playwright test",
      "description": "CRITICAL: Validate 1:1 visual parity (Lit vs React live comparison)",
      "dependencies": [
        "compile:tsc",
        "compile:react-demos"
      ]
    },
    "lint": {
      "dependencies": [
        "lint:editorconfig",
        "lint:eslint",
        "lint:stylelint"
      ]
    },
    "lint:editorconfig": {
      "command": "eclint fix 'elements/**/*.{html,ts,css,json}' 'lib/**/*.{ts,json}' 'scripts/**/*.ts'",
      "description": "Auto-fix files to conform to .editorconfig rules"
    },
    "lint:eslint": {
      "command": "eslint elements lib scripts",
      "description": "Lint TypeScript files"
    },
    "lint:stylelint": {
      "command": "stylelint elements/**/*.css",
      "description": "Lint CSS files"
    },
    "cache": {
      "command": "npx tsx scripts/patternfly-cache.ts",
      "files": [],
      "output": [
        "./.cache/patternfly-react",
        "./.cache/patternfly"
      ],
      "dependencies": [
        "clean:cache"
      ]
    },
    "postinstall": {
      "dependencies": [
        "copy:demos",
        "copy:assets"
      ]
    },
    "start": {
      "service": true,
      "command": "web-dev-server --watch --open",
      "description": "Start the development server (web components only)",
      "dependencies": [
        "clean:plugins",
        "clean:react-demos",
        "compile"
      ]
    },
    "test": {
      "command": "wtr",
      "description": "Run unit tests"
    },
    "watch:react-demos": {
      "service": true,
      "command": "vite build --watch --config vite.config.react-demos.ts",
      "description": "Watch and rebuild React comparison demos",
      "files": [
        "patternfly-react/**/*.tsx"
      ]
    }
  },
  "keywords": [
    "web-components",
    "patternfly",
    "design-system",
    "lit",
    "custom-elements"
  ],
  "author": "PatternFly",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/patternfly/patternfly-elements.git"
  },
  "devDependencies": {
    "@koa/router": "^14.0.0",
    "@open-wc/testing": "^4.0.0",
    "@parse5/tools": "^0.7.0",
    "@patternfly/eslint-config-elements": "^4.0.0",
    "@patternfly/patternfly": "^6.4.0",
    "@patternfly/react-core": "^6.4.0",
    "@playwright/test": "^1.56.1",
    "@pwrs/cem": "^0.6.7",
    "@stylistic/eslint-plugin-js": "^4.4.1",
    "@stylistic/stylelint-config": "^3.0.1",
    "@stylistic/stylelint-plugin": "^4.0.0",
    "@types/koa__router": "^12.0.5",
    "@types/node": "^24.10.0",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.5",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.3.4",
    "@web/dev-server": "^0.4.6",
    "@web/dev-server-esbuild": "^1.0.4",
    "@web/test-runner": "^0.20.2",
    "@web/test-runner-playwright": "^0.11.0",
    "eclint": "^2.8.1",
    "esbuild-plugin-lit-css": "^4.0.0",
    "eslint": "^9.38.0",
    "liquidjs": "^10.24.0",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-order": "^7.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^6.0.5",
    "web-dev-server-plugin-lit-css": "^4.0.0",
    "wireit": "^0.14.12"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.7.4",
    "@lit/context": "^1.1.6",
    "@patternfly/pfe-core": "^5.0.5",
    "lit": "^3.3.1"
  }
}
